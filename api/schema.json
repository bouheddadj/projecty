{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"zrr": {
			"type": ["array", "null"],
			"items": {
				"type": "number"
			},
			"minItems": 4,
			"maxItems": 4
		},
		"ttl": {
			"type": ["number", "null"],
			"default": 60
		},
		"players": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"position": {
						"type": "array",
						"items": {
							"type": "number"
						},
						"minItems": 2,
						"maxItems": 2
					},
					"role": {
						"type": "object",
						"properties": {
							"spieces": {
								"type": "string",
								"enum": ["VOLEUR", "POLICER", "ADMIN"]
							},
							"vitres_traitees": {
								"type": "string",
								"pattern": "^[0-9]+$"
							}
						},
						"required": ["spieces", "vitres_traitees"]
					}
				},
				"required": ["id"]
			}
		},
		"showcaseTriggered": {
			"type": "boolean"
		}
	},
	"required": ["zrr", "ttl", "players", "showcaseTriggered"]
}
